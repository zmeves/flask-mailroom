{% extends 'base.jinja2' %}

{% block subtitle %}Log a Donation{% endblock subtitle %}

{% block content %}
<form method='POST'>
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Donor name:</label>
    <input id="name-input" type='text' name='name'>
    <label for="donation">Donation:</label>
    <input id="donation" type='number' name='amount'>
    <input type="submit" value="Log">
</form>
{% endblock content %}
